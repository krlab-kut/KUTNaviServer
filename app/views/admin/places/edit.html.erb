<h1>Edit Place</h1>

<%= form_for :place, url: admin_place_path(:admin_id, @place), method: :patch do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :counter %>
    <%= f.text_field :counter %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', admin_places_path %>
